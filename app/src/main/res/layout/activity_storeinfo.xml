<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/index_topbg"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:orientation="vertical">

                <include layout="@layout/headlayout"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:id="@+id/tv_curdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="#ffffff"
                        android:textSize="34px"
                        android:text="2017年9月21日"/>
                    <ImageButton
                        android:id="@+id/iv_curdate_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/down_arrow"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_curdate"/>
                    <TextView
                        android:id="@+id/tv_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_section_arrow"
                        android:textColor="#ffffff"
                        android:textSize="34px"
                        android:text="日报表"/>
                    <ImageButton
                        android:id="@+id/iv_section_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/down_arrow"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="3dp"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-85dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/total_part"

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/chart_bg2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/linearlayout_passenger"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="客流量"
                                android:layout_marginBottom="5dp"
                                android:textSize="24px"
                                android:textColor="#cbcaca"/>
                            <TextView
                                android:id="@+id/tv_passenger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="34px"
                                android:textColor="#666666"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#cccccc"/>
                        <LinearLayout
                            android:id="@+id/linearlayout_population"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="当前店内客流"
                                android:textSize="24px"
                                android:textColor="#cbcaca"/>
                            <TextView
                                android:id="@+id/tv_population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="34px"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="15dp"
                            android:background="#cccccc"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="5dp"
                            android:background="#cccccc"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearlayout_newcustomer"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:orientation="vertical">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="新客"
                                android:layout_marginBottom="5dp"
                                android:textSize="24px"
                                android:textColor="#cbcaca"/>
                            <TextView
                                android:id="@+id/tv_newcustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="34px"
                                android:textColor="#666666"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#cccccc"/>
                        <LinearLayout
                            android:id="@+id/linearlayout_oldcustomer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="老客"
                                android:textSize="24px"
                                android:textColor="#cbcaca"/>
                            <TextView
                                android:id="@+id/tv_oldcustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="34px"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/trafic_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/chart_bg2">
                    <TextView
                        android:id="@+id/tv_passenger_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:text="2017-9-21小时客流量统计"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/population_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/chart_bg2">
                    <TextView
                        android:id="@+id/tv_population_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:text="2017-9-21进店人员统计"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customer_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/chart_bg2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_customer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:text="2017-9-21新老客统计"/>
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/comparison_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:background="@drawable/chart_bg2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:text="报表详情"
                        android:textSize="30px"
                        android:textColor="#888888"/>
                    <ListView

                        android:id="@+id/lv_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>