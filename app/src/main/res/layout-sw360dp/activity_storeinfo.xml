<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/head_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/index_topbg"
                android:orientation="vertical"
                android:paddingLeft="22dp"
                android:paddingRight="20dp">

                <include layout="@layout/headlayout" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="62dp">

                    <TextView
                        android:id="@+id/tv_curdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="2017年9月21日"
                        android:textColor="#ffffff"
                        android:textSize="36px" />

                    <ImageButton
                        android:id="@+id/iv_curdate_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/tv_curdate"
                        android:background="@null"
                        android:src="@mipmap/down_arrow" />

                    <TextView
                        android:id="@+id/tv_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_section_arrow"
                        android:text="日报表"
                        android:textColor="#ffffff"
                        android:textSize="36px" />

                    <ImageButton
                        android:id="@+id/iv_section_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="6dp"
                        android:background="@null"
                        android:src="@mipmap/down_arrow" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-85dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:id="@+id/total_part"

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/chart_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/linearlayout_passenger"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="客流量"
                                android:textColor="#999999"
                                android:textSize="30px" />

                            <TextView
                                android:id="@+id/tv_passenger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#555555"
                                android:textSize="36px" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="5dp"
                            android:background="#cccccc" />

                        <LinearLayout
                            android:id="@+id/linearlayout_population"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="当前店内客流"
                                android:textColor="#999999"
                                android:textSize="30px" />

                            <TextView
                                android:id="@+id/tv_population"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#555555"
                                android:textSize="36px" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#cccccc" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#cccccc" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearlayout_newcustomer"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="新客"
                                android:textColor="#999999"
                                android:textSize="30px" />

                            <TextView
                                android:id="@+id/tv_newcustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#555555"
                                android:textSize="36px" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#cccccc" />

                        <LinearLayout
                            android:id="@+id/linearlayout_oldcustomer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="老客"
                                android:textColor="#999999"
                                android:textSize="30px" />

                            <TextView
                                android:id="@+id/tv_oldcustomer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="#222222"
                                android:textSize="36px" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/trafic_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/chart_bg">

                    <TextView
                        android:id="@+id/tv_passenger_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="客流量统计"
                        android:textColor="#555555"
                        android:textSize="30px" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/population_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone"
                    android:background="@drawable/chart_bg">


                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_population_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="进店人员统计"
                        android:textColor="#555555"
                        android:textSize="30px" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/customer_part"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/chart_bg"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_customer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:text="客流统计"
                        android:textColor="#555555"
                        android:textSize="30px" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/comparison_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/chart_bg"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="5dp"
                        android:text="报表详情"
                        android:textColor="#555555"
                        android:textSize="30px" />
                    <com.ums.wifiprobe.ui.ShowAllListView
                        android:id="@+id/lv_comparison"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>